---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import "../styles/global.css";

const pageTitle = "About me (const property)";
const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const happy = true;
const finished = false;
const goal = 3;

const skillColour = "navy";
---

<Layout title={pageTitle}>
	<main>
        <Header />

		<h1>{pageTitle}</h1>
        <p>A work in progress using the AstroJS framework.</p>

        <p>My skills are: </p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>

        {happy && <p>I am happy to learn Astro</p>}
        {finished && <p>I finished this tutorial!</p>}
        {goal == 3 ? <p>My goal is to finish == {String(finished)} this tutorial</p> : <p>My goal is to learn Astro</p>}
	</main>
</Layout>

<style define:vars={{skillColour}}>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	
	h1 {
        color: purple;
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

    .skill {
        color: var(--skillColour);
        font-weight: bold;
    }
</style>
